{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "PlatformIO",
            "args": [
                "run",
                "command": "workbench.action.terminal.clear"
                // "command": "workbench.action.terminal.kill"
            ],
            "problemMatcher": [
                "$platformio"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
                // "command": "workbench.action.terminal.kill"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]            

}